@page
@model TorneoFutbolDepartamental.App.Frontend.Pages.Estadios.AddMunicipioModel
@{
}
<h1>Asignar Municipio</h1>
<form method="post">
    <div class="form-group">
        <label for="Estadioid">Estadio</label>
        <input type="text" Estadioid="Estadioid" name="Estadioid" class="form-control" value="@Model.estadio.EstadioId" readonly>
    </div>
    <div class="form-group">
        <label for="Municipioid">Municipio</label>
        <select Municipioid="Municipioid" name="Municipioid" class="form-control">
            @foreach (var municipio in Model.municipios)
            {
                <option value="@municipio.MunicipioId">@municipio.Nombre</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Asignar Municipio</button>
</form>
<a class="btn btn-primary" asp-page="./Index">Volver</a>