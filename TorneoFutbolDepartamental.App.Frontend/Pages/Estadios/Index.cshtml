@page
@model TorneoFutbolDepartamental.App.Frontend.pages.Estadios.IndexModel
@{
}
<h1>Listado de Estadios</h1>
<form method="get">
    <div class="form-group">
        <label for="b">Buscar</label>
        <input name="b" id="b" class="form-control" asp-for="@Model.bActual">
    </div>
    <button type="submit" class="btn btn-primary">Buscar</button>
</form>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Direccion</th>
            <th scope="col">Ciudad</th>
            <th scope="col">Acciones</th>
        </tr>   
    </thead>
    <tbody>
        @foreach (var estadio in Model.estadios)
        {
            <tr>
                <td>@estadio.Nombre</td>
                <td>@estadio.Direccion</td>
                <td>@estadio.Ciudad</td>
                <td>
                    <a class="btn btn-secondary" asp-page="./Details" asp-route-Estadioid="@estadio.EstadioId">Detalles</a>
                    <a class="btn btn-secondary" asp-page="./Edit" asp-route-Estadioid="@estadio.EstadioId">Editar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-primary" asp-page="./Create">Nuevo Estadio</a>