@page
@model TorneoFutbolDepartamental.App.Frontend.pages.DirectoresTecnicos.IndexModel
@{
}
<h1>Listado de DirectoresTecnicos</h1>
<form method="get">
    <div class="form-group">
        <label for="b">Buscar</label>
        <input name="b" id="b" class="form-control" asp-for="@Model.bActual">
    </div>
    <button type="submit" class="btn btn-primary">Buscar</button>
</form>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Documento</th>
            <th scope="col">Telefono</th>
            <th scope="col">Equipo</th>
            <th scope="col">Acciones</th>
        </tr>   
    </thead>
    <tbody>
        @foreach (var directorTecnico in Model.directoresTecnicos)
        {
            <tr>
                <td>@directorTecnico.Nombre</td>
                <td>@directorTecnico.Documento</td>
                <td>@directorTecnico.Telefono</td>
                <td>@directorTecnico.Equipo</td>
                <td>
                    <a class="btn btn-secondary" asp-page="./Details" asp-route-DirectorTecnicoid="@directorTecnico.DirectorTecnicoId">Detalles</a>
                    <a class="btn btn-secondary" asp-page="./Edit" asp-route-DirectorTecnicoid="@directorTecnico.DirectorTecnicoId">Editar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-primary" asp-page="./Create">Nuevo D.Tecnico</a>