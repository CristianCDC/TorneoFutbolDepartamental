@page
@model TorneoFutbolDepartamental.App.Frontend.pages.Arbitros.IndexModel
@{
}
<h1>Listado de Arbitros</h1>
<form method="get">
    <div class="form-group">
        <label for="b">Buscar</label>
        <input name="b" id="b" class="form-control" asp-for="@Model.bActual">
    </div>
    <button type="submit" class="btn btn-primary">Buscar</button>
</form>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Documento</th>
            <th scope="col">Telefono</th>
            <th scope="col">ColegioPertenece</th>
            <th scope="col">Acciones</th>
        </tr>   
    </thead>
    <tbody>
        @foreach (var arbitro in Model.arbitros)
        {
            <tr>
                <td>@arbitro.Nombre</td>
                <td>@arbitro.Documento</td>
                <td>@arbitro.Telefono</td>
                <td>@arbitro.ColegioPertenece</td>
                <td>
                    <a class="btn btn-secondary" asp-page="./Details" asp-route-Arbitroid="@arbitro.ArbitroId">Detalles</a>
                    <a class="btn btn-secondary" asp-page="./Edit" asp-route-Arbitroid="@arbitro.ArbitroId">Editar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-primary" asp-page="./Create">Nuevo Arbitro</a>
