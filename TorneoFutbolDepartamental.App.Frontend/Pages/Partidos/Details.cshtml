@page
@model TorneoFutbolDepartamental.App.Frontend.pages.Partidos.DetailsModel
@{
}
<h1>Detalles Del Partido</h1>
<table class="table table-dark">
    <tr>
        <th scope="col">FechaHora</th>
        <td>@Model.partido.FechaHora</td>
    </tr>
    <tr>
        <th scope="col">Marcador</th>
        <td>@Model.partido.Marcador</td>
    </tr>
    <tr>
        <th scope="col">Arbitro</th>
        @if (Model.partido.Arbitro == null)
        {
            <td>
                <a class="btn btn-primary" asp-page="./AddArbitro" asp-route-Partidoid="@Model.partido.PartidoId">Asignar Arbitro</a>
            </td>
        }
        else
        {
            <td>@Model.partido.Arbitro.Nombre</td>
        }
    </tr>
    <tr>
        <th scope="col">Equipo Local</th>
        @if (Model.partido.EquipoLocal == null)
        {
            <td>
                <a class="btn btn-primary" asp-page="./AddEquipoLocal" asp-route-Partidoid="@Model.partido.PartidoId">Asignar Equipo Local</a>
            </td>
        }
        else
        {
            <td>@Model.partido.EquipoLocal.Nombre</td>
        }
    </tr>
    <tr>
        <th scope="col">Equipo Visitante</th>
        @if (Model.partido.EquipoVisitante == null)
        {
            <td>
                <a class="btn btn-primary" asp-page="./AddEquipoVisitante" asp-route-Partidoid="@Model.partido.PartidoId">Asignar Equipo Visitante</a>
            </td>
        }
        else
        {
            <td>@Model.partido.EquipoVisitante.Nombre</td>
        }
    </tr>
    <tr>
        <th scope="col">Estadio</th>
        @if (Model.partido.Estadio == null)
        {
            <td>
                <a class="btn btn-primary" asp-page="./AddEstadio" asp-route-Partidoid="@Model.partido.PartidoId">Asignar Estadio</a>
            </td>
        }
        else
        {
            <td>@Model.partido.Estadio.Nombre</td>
        }
    </tr>             
</table>
<a class="btn btn-primary" asp-page="./Index">Volver</a>