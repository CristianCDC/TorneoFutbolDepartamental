@page
@model TorneoFutbolDepartamental.App.Frontend.pages.Partidos.IndexModel
@{
}
<h1>Listado de Partidos</h1>
<table class="table">
    <thead>
        <tr>
            <th scope="col">FechaHora</th>
            <th scope="col">Marcador</th>
            <th scope="col">Acciones</th>
        </tr>   
    </thead>
    <tbody>
        @foreach (var partido in Model.partidos)
        {
            <tr>
                <td>@partido.FechaHora</td>
                <td>@partido.Marcador</td>
                <td>
                    <a class="btn btn-secondary" asp-page="./Details" asp-route-Partidoid="@partido.PartidoId">Detalles</a>
                    <a class="btn btn-secondary" asp-page="./Edit" asp-route-Partidoid="@partido.PartidoId">Editar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-primary" asp-page="./Create">Nuevo Partido</a>